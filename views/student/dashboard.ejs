<h1 class="mt-4 text-center font-weight-bold">Dashboard</h1>
<%- include("_messages") %>

<form action="/main/search" method="POST" class="form-inline">

    <div class="form-group mr-10 ml-10">

        <input class="form-control form-control-lg" type="text" placeholder="Search here for fields.." name="tags">
    </div>
    <button type="submit" class="btn btn-success">Search</button>
</form>
<div class="container mt-20">
    
<% books.forEach((book)=>{ %>
<div class="card my-5" style="box-shadow:10px 10px 5px black;" data-id="<%= book.id %>">
    <div class="card-body">
        <h5 class="card-title font-weight-bold"><%= book.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted"> <%= book.qty %> left<br>ISBN: <%= book.isbn %></h6>
        <% book.tags.forEach(t=>{ %>
        <span class="badge badge-success"><%= t %> </span>
        <% }) %>
        <p class="card-text text-center font-italic"><%= book.desc %></p>
       

        <div class="d-flex flex-row justify-content-around">
            <a href="/student/view/<%= book.id %>"><i class="fas fa-file"></i></a>
           <a href="/student/issue/<%= book.id %>"> <i class="far fa-id-card">Request to issue</i></a>
        </div>
    </div>
    


<% }) %>


</div>
