<%- include("_messages") %>

<div class="card my-5" style="box-shadow:10px 10px 5px black;" data-id="<%= book.id %>">
    <div class="card-body">
        <h5 class="card-title font-weight-bold"><%= book.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted"> <%= book.qty %> left<br>ISBN: <%= book.isbn %></h6>
        <% book.tags.forEach(t=>{ %>
        <span class="badge badge-success"><%= t %> </span>
        <% }) %>
        <p class="card-text text-center font-italic"><%= book.desc %></p>
           <br>
            <div class="d-flex flex-row justify-content-center">
            <div id="carouselExampleIndicators" class="carousel slide bg-dark" data-ride="carousel" style="width: 50%;">
                
                <div class="carousel-inner">
                    <% book.images.forEach(id=>{ %>
                       <% if(book.images.findIndex(i=>i==id)==0) { %>
                        <div class="carousel-item active">
                            <img src="/docs/<%=id%>" width="100" height="500" class="d-block w-100" alt="...">
                        </div>
                        <% }else { %>
                            <div class="carousel-item">
                                <img src="/docs/<%=id%>" width="100" height="500" class="d-block w-100" alt="...">
                            </div>
                            <% } %>
                    <% }) %>
                    
                   
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
            </div>

            <br>
        <div class="d-flex flex-row justify-content-around">
            <a href="/main/edit/<%= book.id %>"><i class="fas fa-edit"></i></a>
            
            <a href="/main/delete/<%= book.id %>"><i class="fas fa-trash-alt"></i></a>
        </div>
    </div>
</div>