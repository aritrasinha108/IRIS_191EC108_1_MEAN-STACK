<h1 class="card-title text-center font-weight-bold">
    EDIT THE BOOK DETAILS
</h1>
<%- include("_messages") %>
<form  class ="container"style="box-shadow:10px 10px 5px black;" action="/main/edit/<%= book.id %>" method="post" enctype="multipart/form-data">
<div class="form-group mb-2">
    <label for="post-title" class="font-weight-bold">Title:</label>
    <input class="form-control" id="post-title" required type="text" placeholder="Enter the title of the post" name="title" value="<%=book.title %>">
</div>
<div class="form-group mb-2">
    <label for="summary" class="font-weight-bold" >Description:</label>
    <textarea class="form-control" name="desc" id="summary" required rows="5"><%= book.desc %></textarea>
    </div>
<div class="form-group">
    <label for=tags">Enter Tags</label>
    <input type="text" class="form-control" id="tags" aria-describedby="emailHelp" placeholder="Enter the Tags Here..."
        name="tags">
    <small id="tagAlert" class="form-text text-muted text-danger">
        <p class="text-danger">Seperate more than one tags with Space!!</p>
    </small>
</div>
<div class="form-group mb-2 d-flex flex-row justify-content-center">    
    <label for="images" class="font-weight-bold">Attach the images here</label>
    <input  name="file" type="file" class="form-control-file" id="images" multiple>
</div>
<div class="form-group mb-2 d-flex flex-row justify-content-center">    
    <label for="qty" class="font-weight-bold">Quantity</label>
    <input required name="qty" type="number"min="1" value="<%= book.qty %>" class="form-control-file" id="qty">
</div>
<div class="form-group mb-2">
    <label for="isbn" class="font-weight-bold">ISBN:</label>
    <input class="form-control" value="<%= book.isbn %>" id="isbn" required type="text" placeholder="Enter the isbn"
        name="isbn">
</div>
<div class="d-flex flex-row justify-content-center">

    <button type="submit" class="btn btn-primary mx-3 my-3">Submit</button>
    <a  href="/main/" class="btn btn-danger mx-3 my-3">Cancel</a>
</div>

</form>
